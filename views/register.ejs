
<%- include header%>

<div>

    <style type="text/css">

        .form-horizontal{
            padding-top: 100px;

            margin: 0 auto;
        }

        .form-group label{
            text-align: right;
        }

    </style>

    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <label for="inputUsername" class="col-sm-2 control-label">Username</label>
            <div class="col-sm-4">
                <input type="text" name="username" class="form-control" id="inputUsername" placeholder="Username">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <label for="inputPassword" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-4">
                <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <label for="inputPassword2" class="col-sm-2 control-label">Verify Password</label>
            <div class="col-sm-4">
                <input type="password" name="password-repeat" class="form-control" id="inputPassword2" placeholder="Password">
            </div>
        </div>
        <input type="submit" value="zhuce"/>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <button type="submit" class="btn btn-primary col-sm-4">Sign in</button>
            </div>
        </div>
    </form>
</div>